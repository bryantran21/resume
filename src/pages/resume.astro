        {education.map(edu => (
          <div class="education-card">
            <img src={edu.logo} alt={edu.school} class="school-logo" />
            <h3>{edu.school}</h3>
            <p class="degree">{edu.degree} (GPA: {edu.gpa})</p>
            <p class="period">{edu.period}</p>
