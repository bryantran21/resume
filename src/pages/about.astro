<Layout title="About Me - Bryan Tran" description="Learn more about my interests, hobbies, and what I'm into">
  <div class="about-page">
    <!-- Navbar -->
    <nav class="navbar">
      <a href="/" class="logo">BRYAN</a>
      <div class="nav-links">
        <a href="/about" class="nav-link active">About</a>
        <a href="/resume" class="nav-link">Resume</a>
        <a href="/projects" class="nav-link">Projects</a>
        <a href="#" class="nav-link">Sign In</a>
      </div>
    </nav>

    <!-- Hero -->
    <div class="about-hero">
      <h1>About Me</h1>
      <p class="subtitle">This was an excuse to showcase my hobbies</p>
    </div>

    <!-- Bio Section -->
    <section class="section bio-section">
      <div class="bio-card">
        <p class="bio-intro">{bio.intro}</p>
        <div class="quick-facts">
          {bio.quickFacts.map(fact => (
            <div class="fact-item">{fact}</div>
          ))}
        </div>
      </div>
    </section>

    <!-- Gym Section -->
    <section class="section gym-section">
      <h2 class="section-title">
        <i class="fas fa-dumbbell"></i>
        Fitness & Lifting
      </h2>
      
      <div class="gym-overview">
        <div class="gym-stat-card">
          <div class="gym-stat-label">Current Goal</div>
          <div class="gym-stat-value">{gymStats.currentGoal}</div>
        </div>
        <div class="gym-stat-card">
          <div class="gym-stat-label">Training Frequency</div>
          <div class="gym-stat-value">{gymStats.frequency}</div>
        </div>
        <div class="gym-stat-card">
          <div class="gym-stat-label">Current Program</div>
          <div class="gym-stat-value">{currentProgram.name}</div>
          <div class="gym-stat-sub">{currentProgram.focus}</div>
        </div>
      </div>
    </section>

    <!-- Golf Section -->
    <section class="section golf-section">
      <h2 class="section-title">
        <i class="fas fa-golf-ball"></i>
        Golf
      </h2>
      
      <!-- Golf Stats -->
      <div class="golf-stats-grid">
        <div class="stat-card">
          <div class="stat-value">{golfStats.personalBest}</div>
          <div class="stat-label">Personal Best</div>
        </div>
        <div class="stat-card">
          <div class="stat-value">{golfStats.favoriteCourse}</div>
          <div class="stat-label">Favorite Course</div>
        </div>
      </div>

      <!-- Golf Bag -->
      <h3 class="subsection-title">My Bag</h3>
      <div class="clubs-grid">
        {golfClubs.map(club => (
          <div class="club-card">
            <div class="club-type">{club.type}</div>
            <div class="club-details">
              <p class="club-brand">{club.brand} {club.model}</p>
              <p class="club-specs">{club.specs}</p>
            </div>
          </div>
        ))}
      </div>

    </section>


    <!-- TCG Section -->
