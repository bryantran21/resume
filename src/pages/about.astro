    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 2rem;
    font-size: 1rem;
    font-weight: 600;
    color: #ef4444;
    transition: all 0.3s;
  }

  .favorite-lift-tag:hover {
    background: rgba(239, 68, 68, 0.2);
    transform: scale(1.05);
  }

  .favorite-lift-tag i {
    font-size: 1.1rem;
  }

  /* Mobile adjustments */
  @media (max-width: 768px) {
    .bio-card {
      padding: 1.5rem;
    }

    .quick-facts {
      grid-template-columns: 1fr;
    }

